# ==========================================
# FLORCA - Production Environment Variables
# ==========================================

# Database (your existing Coolify MySQL)
# Get the internal hostname from Coolify's MySQL service
DATABASE_URL=mysql://root:your-mysql-password@your-coolify-mysql-hostname:3306/flower_db
DB_HOST=your-coolify-mysql-hostname
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-mysql-password
DB_NAME=flower_db

# JWT (minimum 32 characters each - CHANGE THESE!)
ACCESS_TOKEN_SECRET=change-me-minimum-32-characters-long-secret
REFRESH_TOKEN_SECRET=change-me-minimum-32-characters-long-secret
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Email (Resend - https://resend.com)
RESEND_API_KEY=
EMAIL_FROM="Florca <noreply@florca.ge>"

# Frontend URL (your domain)
FRONTEND_URL=https://florca.ge

# CORS (comma-separated origins)
CORS_ORIGINS=https://florca.ge,https://www.florca.ge

# Stock display ratio
STOCK_DISPLAY_RATIO=0.6

# Redis (leave empty for no password)
REDIS_PASSWORD=

# Wallet
WALLET_CURRENCY=GEL

# BOG Payment Gateway
BOG_CLIENT_ID=your-bog-client-id
BOG_SECRET_KEY=your-bog-secret-key
BOG_BASE_URL=https://api.bog.ge
BOG_CALLBACK_URL=https://api.florca.ge/api/v1/payment/bog/callback
BOG_SUCCESS_REDIRECT_URL=https://florca.ge/wallet?payment=success
BOG_FAIL_REDIRECT_URL=https://florca.ge/wallet?payment=failed
BOG_PAYMENT_CURRENCY=GEL
BOG_MOCK_ENABLED=false
BOG_MOCK_PORT=4001

# Port mapping
CLIENT_PORT=3000
