# Server
NODE_ENV=development
PORT=8000

# Database (Prisma)
# Using root for migrations (needs CREATE DATABASE permission for shadow db)
DATABASE_URL="mysql://root:rootpassword@localhost:3308/flower_db"

# Individual DB variables (for backwards compatibility)
DB_HOST=localhost
DB_PORT=3308
DB_USER=root
DB_PASSWORD=rootpassword
DB_NAME=flower_db

# JWT Configuration (minimum 32 characters for secrets)
ACCESS_TOKEN_SECRET=your-access-token-secret-min-32-characters-here
REFRESH_TOKEN_SECRET=your-refresh-token-secret-min-32-characters-here
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Email Configuration (Resend)
# Get your API key from https://resend.com
RESEND_API_KEY=
EMAIL_FROM="FLOWER <noreply@flower.com>"

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# CORS Configuration (comma-separated list for production)
# CORS_ORIGINS=https://flower.com,https://www.flower.com

# Stock display ratio (scraped data safety margin: 0.6 = show 60% of scraped stock)
STOCK_DISPLAY_RATIO=0.6

# Redis
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_PASSWORD=
