{
  "name": "flower-server",
  "version": "1.0.0",
  "type": "module",
  "description": "FLOWER API server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:up": "docker compose up -d && echo \"\nServices started!\n\nAccess URLs:\n  phpMyAdmin:     http://localhost:8084 (root/rootpassword)\n  Redis Commander: http://localhost:8085\n  MySQL:           localhost:3308\n  Redis:           localhost:6381\n\"",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "db:logs": "docker compose logs -f",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:seed": "tsx src/scripts/db/seed.ts",
    "prisma:clear": "tsx src/scripts/db/clear.ts",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop flower-server",
    "pm2:restart": "pm2 restart flower-server",
    "pm2:reload": "pm2 reload flower-server",
    "pm2:delete": "pm2 delete flower-server",
    "pm2:logs": "pm2 logs flower-server",
    "pm2:monit": "pm2 monit"
  },
  "prisma": {
    "seed": "tsx src/scripts/db/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@prisma/client": "^6.19.1",
    "argon2": "^0.41.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "pm2": "^6.0.14",
    "redis": "^5.10.0",
    "resend": "^6.6.0",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^6.19.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
